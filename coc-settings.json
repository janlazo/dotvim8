{
  "coc.preferences.extensionUpdateCheck": "never",
  "coc.source.tag.filetypes": ["c", "cpp"],
  "html.filetypes": ["html"],
  "json.schemas": [
  ],
  "languageserver": {
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"],
      "rootPatterns": [".dockerignore"],
      "requireRootPattern": true
    }
  },
  "less.validate": false,
  "markdownlint.onOpen": false,
  "perlnavigator.enable": true,
  "solargraph.checkGemVersion": false,
  "workspace.rootPatterns": [".git", ".hg"],
  "yaml.schemas": {
  }
}
